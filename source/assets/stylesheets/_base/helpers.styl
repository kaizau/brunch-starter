//
// Utility
// ----------------------------------------------------------------------------

$clearfix
  zoom: 1
  &:before, &:after
    content: " "
    display: table
  &:after
    clear: both

clearfix()
  @extend $clearfix

$hide-text
  border: 0
  color: transparent
  font: 0 / 0 a
  text-shadow: none

hide-text()
  @extend $hide-text

$hide-visually
  border: 0
  clip: rect(0 0 0 0)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px

hide-visually()
  @extend $hide-visually

//
// Media Queries
// ----------------------------------------------------------------------------

above(width)
  @media only screen and (min-width: width)
    {block}

below(width)
  @media only screen and (max-width: (width - 1px))
    {block}

between(min, max)
  @media only screen and (min-width: min) and (max-width: (max - 1px))
    {block}

retina()
  @media (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 144dpi) 
    {block}

background-image-2x(filename, ext, size = 'cover', suffix = '.2x')
  background-image: url(filename + '.' + ext)
  +retina
    background-image: url(filename + suffix + '.' + ext)
    if size
      background-size(size)

//
// Miscellaneous
// ----------------------------------------------------------------------------

$naked-list
  list-style: none
  list-style-image: none
  padding-left: 0

naked-list()
  @extend $naked-list

$nobr
  white-space: no-wrap

nobr()
  @extend $nobr
